{
    "name": "square-bit/laravel-workflow",
    "description": "Add workflow support to your Laravel models.",
    "keywords": [
        "square-bit",
        "laravel",
        "laravel-workflow"
    ],
    "homepage": "https://github.com/square-bit/laravel-workflow",
    "license": "MIT",
    "authors": [
        {
            "name": "Squarebit, Lda",
            "email": "tech@square-bit.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1|^8.2",
        "illuminate/contracts": "^10.0|^11.0|^12.0",
        "spatie/laravel-package-tools": "^1.14.0",
        "spatie/laravel-permission": "^6"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.8",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Squarebit\\Workflows\\": "src/",
            "Squarebit\\Workflows\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Squarebit\\Workflows\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Squarebit\\Workflows\\WorkflowsServiceProvider"
            ],
            "aliases": {
                "Workflows": "Squarebit\\Workflows\\Facades\\Workflows"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
